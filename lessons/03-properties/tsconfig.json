{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ],
  "files": [
    "typings/react-props-decorators/react-props-decorators.d.ts",
    "typings/react/react-dom.d.ts",
    "typings/react/react.d.ts",
    "typings/tsd.d.ts",
    "App.tsx"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
